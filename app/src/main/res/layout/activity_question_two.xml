<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_question_two"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Gold"
    tools:context="org.theappflap.basics.quiz2016.QuestionTwoActivity">

    <TextView
        android:id="@+id/question_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BlueViolet"
        android:text="@string/question_two_text"
        android:textSize="@dimen/text_twenty_four" />

    <RadioGroup
        android:id="@+id/answer_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_two"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="@dimen/button_space"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answer_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_one_text_2"
            android:textColor="@color/BlueViolet"
            android:textSize="@dimen/text_twenty_four" />

        <RadioButton
            android:id="@+id/answer_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_two_text_2"
            android:textColor="@color/BlueViolet"
            android:textSize="@dimen/text_twenty_four" />

        <RadioButton
            android:id="@+id/answer_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_three_text_2"
            android:textColor="@color/BlueViolet"
            android:textSize="@dimen/text_twenty_four" />

        <RadioButton
            android:id="@+id/answer_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_four_text_2"
            android:textColor="@color/BlueViolet"
            android:textSize="@dimen/text_twenty_four" />
    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_group"
        android:layout_marginTop="118dp"
        android:layout_marginRight="@dimen/button_space"
        android:text="@string/submit_text"
        android:textSize="@dimen/text_30" />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_group"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="143dp"
        android:layout_marginRight="45dp"
        android:layout_toRightOf="@id/submit_button"
        android:background="@color/Yellow"
        android:text="@string/skip_text"
        android:textSize="@dimen/text_30" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_text"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
